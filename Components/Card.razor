<div class="d-flex align-items-stretch col-xs-12 col-md-6 col-lg-4">
    <div class="card h-75">
        <img class="card-img card-img-top h-50 img-responsive" src="@img">
        <div class="card-body text-center">
            <h5 class="card-title">@titolo</h5>
            <p class="card-text">@testo</p>
            <a href="@link" class="btn btn-primary">Vai</a>
        </div>
    </div>
</div>


@code {

    [Parameter]
    public String img { get; set; }

    [Parameter]
    public String titolo { get; set; }

    [Parameter]
    public String testo { get; set; }

    [Parameter]
    public String link { get; set; }

}
